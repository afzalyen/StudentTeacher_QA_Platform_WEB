@model IEnumerable<test_dotnet1_Models.Models.Question>
@using test_dotnet1_Models.Identity

@{
    var userType = (UserType)ViewData["UserType"];
}

@if (userType != UserType.Teacher)
{
    <a asp-action="AskQuestion" class="btn btn-primary">Ask Question</a>
}

<h2>Recent Questions</h2>

<ul>
    @foreach (var question in Model)
    {
        <li>
            <h3><a asp-action="AnswerQuestion" asp-route-id="@question.Id">@question.Title</a></h3>
            <p>@question.Description</p>
            <p>Asked by: @question.UserId</p> <!-- Added Asked By information -->
            <p>Created at: @question.CreatedAt.ToString("g")</p>
        </li>
    }
</ul>
